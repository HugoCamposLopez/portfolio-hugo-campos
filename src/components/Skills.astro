---
import SkillCard from "./SkillCard.astro";
import SkillCardSvg from "./SkillCardSvg.astro"

---

<section class="flex flex-col gap-[100px] pb-[100px]" id="Skills">
  <h1 class="text-white font-mont text-center pt-[100px] text-40px font-bold">Skills</h1>
  <div class="grid md:grid-cols-2 xl:grid-cols-3 grid-cols-2  md:gap-y-[138px] gap-y-[70px] place-items-center">
    <SkillCardSvg  height={96}  altImage='React Icon' imageName='react-logo' skillTitle='Reactjs & React Native'/>
    <SkillCardSvg  height={96}  altImage='Jest Icon' imageName='jest-logo' skillTitle='Jest'/>
    <SkillCard  height={96}  altImage='React Testing Library Icon' imageName='rtl-logo' skillTitle='React Testing Library'/>
    <SkillCard  height={96}  altImage='NextJs Icon' imageName='nextjs-logo' skillTitle='Next.js'/>
    <SkillCardSvg  height={96}  altImage='Redux Icon' imageName='redux-logo' skillTitle='Redux Zustand Mobx'/>
    <SkillCard  height={96}  altImage='Tailwind Icon' imageName='tailwind-logo' skillTitle='Tailwind & NativeWind'/>
    <SkillCard  height={96}  altImage='Typescript Icon' imageName='typescript-logo' skillTitle='TypeScript'/>
    <SkillCard  height={96}  altImage='Javascript Icon' imageName='javascript-logo' skillTitle='JavaScript'/>
    <SkillCard  height={96}  altImage='Git Icon' imageName='git-logo' skillTitle='Git'/>
  </div>
</section>