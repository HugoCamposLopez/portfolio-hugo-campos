---
import { GithubIcon } from './icons/GithubIcon.tsx'
import { LinkedInIcon } from './icons/LinkedInIcon.tsx'

---
    <nav
      class="flex justify-between items-center bg-black px-[12px] top-0 fixed overflow-hidden w-full shadow-white-sm h-10">
      <span class="cursor-pointer font-mont text-white hidden sm:block" > Hugo Campos</span>
      <div class="sm:flex gap-10 text-white font-mont hidden">
        <a
          href="#Main"
          class="w-10 cursor-pointer hover:scale-110 transition hover:translate-y-1 hover:font-bold">
          Main
        </a>
        <a
          href="#About"
          class="w-12 cursor-pointer hover:scale-110 transition hover:translate-y-1 hover:font-bold">
          About
        </a>
        <a
          href="#Skills"
          class="w-10 cursor-pointer hover:scale-110 transition hover:translate-y-1 hover:font-bold">
          Skills
        </a>
        <a
        href="#Projects"
        class="w-16 cursor-pointer hover:scale-110 transition hover:translate-y-1 hover:font-bold">
          Projects
        </a>
      </div>
    
      <div class="sm:hidden flex gap-2 cursor-pointer">
        <ul class="menu text-white font-mont pt-10 flex gap-3 text-center" id="menu">
          <li  class="hover:bg-tial"><a href="#Main">Home</a></li>
          <li class="hover:bg-tial"><a href="#About">About</a></li>
          <li class="hover:bg-tial"><a href="#Skills">Skills</a></li>
          <li class="hover:bg-tial"><a href="#Projects">Projects</a></li>
          <a class="close font-mont text-lg font-bold" href="#">
            <span class="material-icons ">
              x
            </span>
          </a>
        </ul>
        <a class="hamburger rounded-md  bg-white p-1" href="#menu">
          <span class="material-icons font-mont rounded ">
            <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="20" height="20" viewBox="0 0 72 72">
              <path d="M56 48c2.209 0 4 1.791 4 4 0 2.209-1.791 4-4 4-1.202 0-38.798 0-40 0-2.209 0-4-1.791-4-4 0-2.209 1.791-4 4-4C17.202 48 54.798 48 56 48zM56 32c2.209 0 4 1.791 4 4 0 2.209-1.791 4-4 4-1.202 0-38.798 0-40 0-2.209 0-4-1.791-4-4 0-2.209 1.791-4 4-4C17.202 32 54.798 32 56 32zM56 16c2.209 0 4 1.791 4 4 0 2.209-1.791 4-4 4-1.202 0-38.798 0-40 0-2.209 0-4-1.791-4-4 0-2.209 1.791-4 4-4C17.202 16 54.798 16 56 16z"></path>
              </svg>
          </span>
        </a>
      </div>
      <div>
        <div class="flex gap-4">
          <GithubIcon width={25} height={25} />
          <LinkedInIcon width={30} height={30} />
        </div>
      </div>
    </nav>

    <style>
  .hamburger {
  color: white;
  /* a large z-index puts the ham button above the rest of the page*/
  z-index: 99;
  cursor: pointer;
}

.menu {
  position: fixed;
  /* give the menu a larger z-index than the ham link
  to put the menu above it */
  z-index: 100;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 200px;
  /* basic menu styling*/
  list-style: none;
  background: black;
  display: flex;
  border-radius: 20px;
  flex-direction: column;
  /* animate slide up/down */
  transform: translateY(-100%);
  transition: transform 0.2s ease;
}

.close {
  position: absolute;
  border: none;
  color: white;
  cursor: pointer;
  top: 1rem;
  right: 1rem;
}
.menu:target {
  /* show menu */
  transform: translateY(0);
}


    </style>
  

